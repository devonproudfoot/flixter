<br />
<div class="booyah-box col-10 offset-1">
  <h1><%= @course.title %></h1>
  <br />
  <%= link_to 'Preview Course as a Student', course_path(@course), class: 'btn btn-warning float-right' %>
  <br class="clear" />

  <div class="text-center">
    <%= link_to 'Add a Section', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg' %>
  </div>

  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
      </li>
    <% end %>
  </ul>
</div>